Private Sub Workbook_Open()
	Application.OnKey "^+g", "Action_GridlinesToggleSub"
	Application.OnKey "^+{[}", "Action_NavigateFirstSheet"
	Application.OnKey "^+{]}", "Action_NavigateLastSheet"
	Application.OnKey "^+t", "Action_PasteFormats"
	Application.OnKey "^+f", "Action_PasteFormulas"
	Application.OnKey "^+v", "Action_PasteValues"
	Application.OnKey "^+z", "Action_ZoomToggle"
	Application.OnKey "^+c", "Format_Align_CenterAcrossSelection"
	Application.OnKey "^+r", "Format_Align_Right"
	Application.OnKey "^+2", "Format_DateCycle"
	Application.OnKey "^+e", "Action_ErrorWrapper"
	Application.OnKey "^+k", "Format_FillCycle"
	Application.OnKey "^+l", "Format_FontCycle"
	Application.OnKey "^+i", "Format_IndentCycle"
	Application.OnKey "^+1", "Format_NumberCycle"
	Application.OnKey "^+u", "Format_SingleAccounting"
	Application.OnKey "^+w", "Format_WrapText"	
End Sub
